[global]
    font = "Fantasque Sans Mono 12"
    stack_duplicates = yes
    hide_duplicates_count = yes
    allow_markup = yes
    format = "<b>%s</b>\n%b"
    sort = yes
    indicate_hidden = yes
    alignment = left
    bounce_freq = 0
    show_age_threshold = 60
    word_wrap = yes
    ignore_newline = no
    geometry = "200x5-6+30"
    transparency = 20
    idle_threshold = 120
    monitor = 0
    follow = mouse
    sticky_history = yes
    line_height = 3
    separator_height = 2
    padding = 8
    horizontal_padding = 8
    separator_color = "#646887"
    startup_notification = false

[frame]
    width = 2
    color = "#646887"

[urgency_low]
    background = "#282a36"
    foreground = "#8be9fd"
    timeout = 5

[urgency_normal]
    background = "#282a36"
    foreground = "#50fa7b"
    timeout = 20

[urgency_critical]
    background = "#282a36"
    foreground = "#ff79c6"
    timeout = 0